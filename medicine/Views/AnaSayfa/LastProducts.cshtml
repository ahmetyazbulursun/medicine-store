@using medicine.Models.Entity
@model List<Tbl_Urunler>

<div class="table-responsive">
    <h3 class="bg-white m-0 p-2 text-center position-relative">Son Eklenen 5 Ürün</h3>
    <table class="table user-table table-hover table-responsive bg-white">
        <thead align="center">
            <tr>
                <th>Ürün Adı</th>
                <th>Resim</th>
                <th>Kategori</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tbody align="center">
                <tr>
                    <td>@x.URUNAD</td>
                    <td><img src="@x.RESIM" width="100" class="img-fluid" /></td>
                    <td>@x.Tbl_Kategoriler.KATEGORIADI</td>
                </tr>
            </tbody>
        }
    </table>
</div>

